{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 5
    },
    "text": {
      "type": "text",
      "required": true,
      "minLength": 5
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "blog_comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-comment.blog-comment",
      "mappedBy": "blog"
    }
  }
}
